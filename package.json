{
  "name": "job-applier",
  "version": "1.0.0",
  "description": "Automated job application system for Indeed using Bun and TypeScript",
  "type": "module",
  "module": "src/index.mts",
  "scripts": {
    "dev": "bun run --watch src/index.mts",
    "start": "bun run src/index.mts",
    "lint": "eslint src/**/*.mts",
    "test": "bun test",
    "build": "bun build src/index.mts --outdir ./dist --target bun"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "mongoose": "^9.1.4",
    "playwright": "^1.40.1",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.53.1"
  }
}
