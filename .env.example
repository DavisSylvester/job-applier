# Indeed Credentials
INDEED_EMAIL=your-email@example.com
INDEED_PASSWORD=your-password
INDEED_AUTH_PROVIDER=password # or 'google'

# Google OAuth (required if INDEED_AUTH_PROVIDER=google)
GOOGLE_EMAIL=your-google-email@example.com
GOOGLE_PASSWORD=your-google-password

# Proxy Configuration (Decodo Residential or similar)
PROXY_HOST=proxy.decodio.com
PROXY_PORT=8080
PROXY_USERNAME=
PROXY_PASSWORD=
USE_PROXY=true

# Smart Proxy Settings
# Enable smart proxy rotation for IP rotation between requests
SMART_PROXY=false
# Optional: Custom rotation URL for advanced proxy services
# PROXY_ROTATION_URL=https://api.example.com/rotate

# Job Search Configuration (defaults geared for NodeJS in Dallas/75495)
JOB_SEARCH_KEYWORDS=nodejs
JOB_LOCATION=Dallas, TX
JOB_RADIUS=100
JOB_MAX_DAYS_OLD=5

# Use aggregator for Dallas/75495 NodeJS search (radius 100)
DECODO_DALLAS=false

# Application Configuration
AUTO_APPLY=false
DRY_RUN=true
MAX_APPLICATIONS_PER_DAY=10
HEADLESS=false

# Resume and Cover Letter
RESUME_PATH=./data/resume.pdf
COVER_LETTER_PATH=./data/cover-letter.txt

# MongoDB Configuration
MONGO_USERNAME=your-mongodb-username
MONGO_PASSWORD=your-mongodb-password
MONGO_HOST=mongodb.net
MONGO_CLUSTER=cluster0
MONGO_DB_NAME=job-applier

# GitHub Packages Token (for private package registry)
CICD_TOKEN=your-github-personal-access-token
